! Font config
URxvt*renderFont: true
URxvt*font: xft:Noto Mono for Powerline:antalias=true:pixelsize=14
URxvt*boldFont: xft:Noto Mono for Powerline:antalias=true:pixelsize=14
URxvt*letterSpacing: 1
URxvt*lineSpace: 2

! Scrollback length
URxvt*savelines: 16384

! Double-click to select whole URLs
URxvt*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! Hide scrollbar
URxvt*scrollBar: false

! Terminal window padding
URxvt*internalBorder: 20

! Disable scrollback for pagers
URxvt*secondaryScreen: 1
URxvt*secondaryScroll: 0

URxvt.perl-ext-common: selection-to-clipboard
